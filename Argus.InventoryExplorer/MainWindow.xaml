<Window x:Class="Argus.InventoryExplorer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Argus.InventoryExplorer"
        mc:Ignorable="d"
        Title="Inventory Explorer" Height="450" Width="800">

    <!-- One‑cell Grid so the ListView stretches with the window -->
    <Grid>
        <ListView x:Name="InventoryListView"
                  Margin="10"
                  ItemsSource="{Binding InventoryItems}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID"
                                    Width="80"
                                    DisplayMemberBinding="{Binding Id}" />
                    <GridViewColumn Header="Name"
                                    Width="240"
                                    DisplayMemberBinding="{Binding Name}" />
                    <GridViewColumn Header="Quantity"
                                    Width="100"
                                    DisplayMemberBinding="{Binding Quantity}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
